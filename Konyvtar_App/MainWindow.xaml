<Window x:Class="Konyvtar_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Konyvtar_App"
        mc:Ignorable="d"
             Title="Könyvtár app" Height="500" Width="900">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0" />
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="122*" />
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="475*"/>
        </Grid.ColumnDefinitions>


        <!-- Bal oldal: űrlap + szűrés -->
        <StackPanel Grid.ColumnSpan="2">
            <TextBlock Text="Keresés cím alapján:" />

            <TextBox x:Name="txtCimkeres" 
                     Margin="0 5 0 10" TextChanged="txtCimkeres_TextChanged" />


        </StackPanel>
        <StackPanel Margin="10,50,10,56" 
                    Grid.Column="0" Grid.ColumnSpan="2" RenderTransformOrigin="0.489,0.81">


            <TextBlock Text="Könyv kezelés:" />

            <TextBlock Text="Cím:" />
            <TextBox x:Name="txtCim" 
                     Margin="0 5 0 10" />


            <TextBlock Text="Szerző:" />
            <TextBox x:Name="txtSzerzo" 
                     Margin="0 5 0 10" />
            <TextBlock Text="Kölcsönözhető:" />
            

            <TextBlock Text="Kiadás éve:" />
            <TextBox x:Name="txtKiadas_eve" 
                     Margin="0 5 0 10" />
            <TextBlock Text="Műfaj:" />
            <ComboBox x:Name="cb_Mufaj" Width="295" 
                     />


            <StackPanel Orientation="Horizontal" 
                        Margin="0 10 0 10">
                <Button Content="Hozzáadás" 
                        Width="90" 
                        Margin="2" 
                        Click="Hozzaad_Button_Click"/>
                <Button Content="Módosítás" 
                        Width="90" 
                        Margin="2" 
                         Click="Modosit_Button_Click"/>
                <Button Content="Törlés" 
                        Width="90" 
                        Margin="2" 
                         Click="Torles_Button_Click"/>
            </StackPanel>


            <StackPanel Orientation="Horizontal">
                <Button Content="Űrlap törlése és az adatok betöltése" 
                        Width="273" 
                         Click="UrlapTorles_Button_Click"/>



            </StackPanel>






        </StackPanel>


        <!-- Jobb oldal: DataGrid -->
        <TextBlock Text="Műfaj" Margin="20,9,63,459" Grid.Column="2" RenderTransformOrigin="0.5,0.5">
            <TextBlock.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.173"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBlock.RenderTransform>
        </TextBlock>
        <ComboBox Name="cb_Mufaj2" Margin="0,9,418,459" Grid.Column="2" RenderTransformOrigin="0.5,0.5" Grid.ColumnSpan="3" HorizontalAlignment="Right" Width="112">

        </ComboBox>

        <DataGrid x:Name="dgKonyv" 
                  Grid.Column="2" 
                  Margin="10,31,0,0" 
                  AutoGenerateColumns="True"
                  SelectionChanged="dgkonyv_SelectionChanged" Grid.ColumnSpan="3"
        />
    </Grid>

</Window>
